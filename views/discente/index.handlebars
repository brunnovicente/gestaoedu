<div class="container">

    <h5>Listagem de Aluno</h5>

    <form method="POST" action="/discente/buscar">
        <div class="row">
            <div class="col-8">
                <input type="text" placeholder="Digite o nome do aluno" name="busca" class="form-control">
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-sm btn-success">Buscar</button>
            </div>
        </div>
    </form>

    <table class="table table-hover mt-2">
        <tr>
            <th>MATR√çCULA</th>
            <th>NOME</th>
            <th>E-MAIL</th>
            <th></th>
        </tr>

        {{#each discentes}}
            <tr>
                <td>{{matricula}}</td>
                <td>{{nome}}</td>
                <td>{{email}}</td>
                <td>
                    <a href="/discente/ativar/{{id}}" class="btn btn-sm btn-primary">Ativar</a>
                </td>
            </tr>
        {{/each}}

    </table>

</div>