<div class="container-sm">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h4>Turmas</h4>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/turma/cadastrar" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Novo</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a href="/principal" class="btn btn-outline-dark"><i class="fa-solid fa-chevron-left"></i> Voltar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <table class="table table-striped">
        <tr>
            <th>CODIGO</th>
            <th>DESCRIÇÃO</th>
            <th>SEMESTRE</th>
            <th>CURSO</th>
            <th></th>
        </tr>

        {{#each turmas}}
            <tr>
                <td>{{codigo}}</td>
                <td>{{descricao}}</td>
                <td>{{ano}}.{{semestre}}</td>
                <td>{{curso.descricao}}</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" href="/turma/editar/{{id}}"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                </td>
            </tr>
        {{/each}}

    </table>

</div>