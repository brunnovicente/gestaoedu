<div class="row mt-2 mx-0">

    <div class="col-sm-3">
        <div class="border border-1 rounded-2 bg-light p-2">
            <img src="img/semfoto.png" class="w-50 mx-auto rounded-circle d-flex align-content-center">

            <h4 class="text-center mt-3">{{usuario.professor.nome}}</h4>
            <h5 class="text-center mt-2">SIAPE: {{usuario.username}}</h5>
            <h5 class="text-center mt-2">E-MAIL: {{usuario.professor.email}}</h5>
            <h5 class="text-center mt-2">CATEGORIA: {{categoriaUsuario usuario.categoria}}</h5>

        </div>

    </div>
    <div class="col-sm-9">

            <div class="border border-1 rounded rounded-2 shadow-sm p-3 w-50 bg-body-tertiary">
                <h5 class="mb-3">Notificações</h5>
                {{#if pendentes}}
                    <a class="btn btn-outline-danger position-relative" href="/permuta/pendentes">
                        <i class="fa-regular fa-envelope"></i>
                        Pendentes
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            {{pendentes}}
                            <span class="visually-hidden">
                                unread messages
                            </span>
                        </span>
                    </a>
                {{/if}}
                {{#if abertas}}
                <a class="btn btn-outline-primary position-relative mx-3" href="/permuta/abertas">
                    <i class="fa-regular fa-envelope"></i>
                    Abertas
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        {{abertas}}
                        <span class="visually-hidden">
                            unread messages
                        </span>
                    </span>
                </a>
                {{/if}}
            </div>

    </div>

