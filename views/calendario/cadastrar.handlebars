<div class="col-md-6 mx-auto mb-2 shadow pb-2 mt-1" id="formulario">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h4>Cadastrar Calendário</h4>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ms-2">
                        <a href="/calendario" class="btn btn-outline-dark"><i class="fa-solid fa-chevron-left"></i> Voltar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="p-2">
        <form method="post" action="/calendario/salvar">
            <label>DESCRIÇÃO</label>
            <input type="text" class="form-control" name="descricao" required>

            <label>ANO</label>
            <input type="number" class="form-control w-25" name="ano" required>

            <label class="mt-3">SEMESTRE</label>
            <input type="number" class="form-control w-25" name="semestre" required>

            <div class="row">
                <div class="col-sm-3">
                    <label class="mt-3">INICIO</label>
                    <input type="date" name="inicio" class="form-control" required>
                </div>
                <div class="col-sm-3">
                    <label class="mt-3">FIM</label>
                    <input type="date" name="fim" class="form-control" required>
                </div>
            </div>

            <button class="btn btn-success mt-3">Salvar</button>
        </form>
    </div>

</div>