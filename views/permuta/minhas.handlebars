</style>
<nav class="navbar bg-body-tertiary container-sm mb-2">
    <div class="container-fluid">
        <h4 href="#">Permutas</h4>
        <form method="post" action="/permuta/listar">
            <input type="number" value="{{professor.siape}}" name="busca" hidden="hidden">
            <button type="submit" class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-chevron-left"></i> Voltar</button>
        </form>
    </div>
</nav>
<div class="container-sm">
        <hr>
        {{#each permutas}}
            <div class="shadow p-2 mt-4" style="background-color: #D3D3D3;">
                <div class="row">
                    <div class="col-sm">
                        <label>CURSO</label>
                        <input type="text" value="{{diario.turma.curso.descricao}}" class="form-control" disabled>
                    </div>
                    <div class="col-sm">
                        <label>DIÁRIO</label>
                        <input type="text" value="{{diario.descricao}}" class="form-control" disabled>
                    </div>
                    <div class="col-sm-2">
                        <label>TURMA</label>
                        <input type="text" value="{{diario.turma.descricao}}" class="form-control" disabled>
                    </div>
                    <div class="col-sm-2">
                        <label>SEMESTRE</label>
                        <input type="text" value="{{diario.turma.ano}}.{{diario.turma.semestre}}" class="form-control" disabled>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-sm-2">
                        <label>DATA</label>
                        <input type="text" value="{{formatDate data}}" class="form-control" disabled>
                    </div>
                    <div class="col-sm-2">
                        <label>DIA</label>
                        <input type="text" value="{{dia}}" class="form-control" disabled>
                    </div>
                    <div class="col-sm-2">
                        <label>HORÁRIOS</label>
                        <input type="text" value="{{horarios}}" class="form-control" disabled>
                    </div>
                </div>
            </div>


