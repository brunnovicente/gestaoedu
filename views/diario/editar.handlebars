<div class="col-md-6 mx-auto mb-2 shadow pb-2 mt-1" id="formulario">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h4>Cadastrar Diário</h4>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item ms-2">
                        <a href="/diario" class="btn btn-outline-dark"><i class="fa-solid fa-chevron-left"></i> Voltar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="p-2">
        <form method="post" action="/diario/editar">
            <input id="id" name="id" hidden="hidden" value="{{diario.id}}">
            <label>CODIGO</label>
            <input value="{{diario.codigo}}" type="number" class="form-control w-25" name="codigo" required>
            <label class="mt-3">DESCRIÇÃO</label>
            <input value="{{diario.descricao}}" type="text" class="form-control" name="descricao">


            <label class="mt-3">HORARIOS</label>
            <input value="{{diario.horario}}" type="text" name="horario" class="form-control w-25">

            <label class="mt-3">TURMA</label>
            <select id="turma" name="turma_id" class="form-select">
                {{#each turmas}}
                    {{#if (igual id ../diario.turma.id)}}
                        <option value="{{id}}" selected>{{codigo}} - {{descricao}}</option>
                    {{else}}
                        <option value="{{id}}">{{codigo}} - {{descricao}}</option>
                    {{/if}}
                {{/each}}
            </select>

            <label class="mt-3" for="professor_id">PROFESSOR</label>
            <select name="professor_id" class="form-select" id="professor_id">
                {{#each professores}}
                    {{#if (igual id ../diario.professor.id)}}
                        <option value="{{id}}" selected>{{nome}}</option>
                    {{else}}
                        <option value="{{id}}">{{nome}} É diferente</option>
                    {{/if}}

                {{/each}}
            </select>
            <button class="btn btn-success mt-3">Salvar</button>
        </form>
    </div>

</div>