<div class="container-sm">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <h4>Diários</h4>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/diario/cadastrar" class="btn btn-outline-dark"><i class="fa-solid fa-plus"></i> Novo</a>
                    </li>
                    <li class="nav-item ms-2">
                        <a href="/principal" class="btn btn-outline-dark"><i class="fa-solid fa-chevron-left"></i> Voltar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <table class="table table-striped">
        <tr>
            <th>DESCRIÇÃO</th>
            <th>HORARIO</th>
            <th>PROFESSOR</th>
            <th>CURSO</th>
            <th>TURMA</th>
            <th>ANO</th>
            <th></th>
        </tr>

        {{#each diarios}}
            <tr>
                <td>{{descricao}}</td>
                <td>{{horario}}</td>
                <td>{{professor.nome}}</td>
                <td>{{turma.curso.descricao}}</td>
                <td>{{turma.descricao}}</td>
                <td>{{turma.ano}}</td>
                <td>
                    <a href="/diario/editar/{{id}}">Editar</a>
                </td>
            </tr>
        {{/each}}

    </table>

</div>